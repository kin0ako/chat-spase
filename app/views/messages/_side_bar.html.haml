.chat-side
  .side__header
    .side__header__box
      .side__header__box__user-name
        = current_user.name
      .side__header__box__menu
        .side__header__box__menu__new-group
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        .side__header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__group-name
            = group.name
